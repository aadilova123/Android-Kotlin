<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:visibility="gone"
        android:id="@+id/btnSin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="sin"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"
        tools:ignore="Suspicious0dp" />

    <Button
        android:visibility="gone"
        android:id="@+id/btnCos"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="cos"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"/>


    <Button
        android:visibility="gone"
        android:id="@+id/btnTan"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="tan"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btnPercent"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="%"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btnLn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="ln"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"
        />

    <Button
        android:visibility="gone"
        android:id="@+id/btnLog"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="log"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btnPow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="^"

        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btnNSqrt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="n√"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"/>



    <Button
        android:visibility="gone"
        android:id="@+id/btnFactorial"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="!"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:background="@color/blacke"
        android:textColor="@color/bluee"/>



    <TextView
        android:id="@+id/display"
        android:textSize="50sp"
        android:gravity="center|right"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/blacke"
        android:textColor="@color/whitee"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/square_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="√"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>

        <Button
            android:id="@+id/square"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x²"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DEL"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/n8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/n9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/n5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/n6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/multip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="×"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/n2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/n3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/whitee"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="35sp"
            android:background="@color/blacke"
            android:textColor="@color/bluee"/>

    </LinearLayout>

</LinearLayout>