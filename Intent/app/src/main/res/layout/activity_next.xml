<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_centerVertical="false"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="422dp"
            android:layout_height="240dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/p1" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="12dp"
            android:layout_marginLeft="35dp"
            android:paddingTop="2dp"
            android:paddingLeft="3dp"
            android:textSize="7dp"
            android:textColor="#ffffff"
            android:text="ЛИГА ЧЕМПИОНОВ УЕФА"
            android:background="@color/colorPrimary">

        </TextView>

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="0"
            android:text="@string/str1"
            android:textSize="18dp"
            android:paddingStart="35dp"
            android:layout_marginTop="5dp"
            android:textColor="#545454"
            android:textStyle="bold"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7b7b7b"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:paddingStart="35dp"

            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Дмитрий Панферов"
            android:textColor="#67aded"
            android:paddingStart="35dp"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:paddingStart="35dp"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="вчера в 01:38 | Обновлено 23 ч. назад "
            android:textSize="7dp"

            android:layout_marginBottom="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7b7b7b"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="16dp"
            android:paddingStart="35dp"
            android:layout_marginTop="0dp"

            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Второй день в 1/8 финала Лиги чемпионов\nполучился в разы бодрее первого."
            android:paddingStart="35dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="«Тоттенхэм» – «РБ Лейпциг» (0:1)"
            android:textColor="#67aded"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:paddingStart="40dp"
            />



        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Гол: Вернер 58' (П)"
            android:paddingStart="35dp"
            android:layout_marginTop="7dp"
            android:textSize="12dp"
            android:layout_marginBottom="9dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7b7b7b"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="16dp"
            android:paddingStart="35dp"
            android:layout_marginTop="0dp"

            />



        <TextView
            android:id="@+id/textV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="ЕЩЕ ПО ТЕМЕ"
            android:paddingStart="35dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Никогда не оставляйте Черышева в запасе – Денис вышел и через 2 минуты забил «Аталанте»"
            android:textColor="#67aded"
            android:paddingStart="35dp"
            android:textSize="10dp"
            android:layout_marginTop="0dp"
            android:textStyle="bold"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7b7b7b"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="16dp"
            android:paddingStart="35dp"
            android:layout_marginTop="0dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="35dp"
                android:text="Что нужно знать: "
                android:textColor="#000000"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Жозе Моуринью остался перед матчем"
                android:textSize="12dp">

            </TextView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="35dp"
            android:text="почти без форвардов, а Юлиан Нагельсманн – без защитников. Получилось так, что атаку «шпор» сформировали номинальные полузащитники Лукас Моура, Джовани ло Сельсо и Стивен Бергвейн, а вот в центре защиты у «РБ Лейпциг» сыграли крайние дефы и опорник. В битве неосновных формаций сильнее оказались гости, причем намного. Уже в первом тайме они наколотили 12 ударов (из них три в первые две минуты) и в дальнейшем играли активнее. Закономерным результатом был бы счет 3:2 или даже 4:2 в пользу гостей, но чудесные Уго Льорис и Петер Гулачи спасли букмекеров от разорения на ТБ3,5."
            android:textSize="12dp"
            >

        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="35dp"
            android:text="Цифры матча: "
            android:textColor="#000000"
            android:textSize="12dp">

        </TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="35dp"
            android:text="6. «Тоттенхэм» стал шестым клубом, которым Жозе Моуринью руководил в плей-офф ЛЧ. До этого были «Порту», «Челси», «Интер», «Реал» и «МЮ»."
            android:textSize="12dp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7b7b7b"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="16dp"
            android:paddingStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>



    </LinearLayout>

</ScrollView>